<div class="panel panel-default">
  
  <div class="panel-heading">
    <h1>Pins</h1>
  </div>
  
  <div class="panel-body">
    <table>
      <thead>
        <tr>
          <th>Image</th>
          <th>Description</th>
          <th>User</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @pins.each do |pin| %>
          <tr>
            <td><%= image_tag pin.image.url(:medium) %></td>
            <td><%= pin.description %></td>
            <td><center><%= pin.user.email if pin.user %></center></td>
            <td><%= link_to 'Show', pin %></td>
            <% if pin.user == current_user && pin.user.nil? == false %>
              <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
              <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <br>

  <div class="panel-footer">
    <% if user_signed_in? %>
      <%= link_to 'New Pin', new_pin_path %>
    <% end %>
  </div>
</div>